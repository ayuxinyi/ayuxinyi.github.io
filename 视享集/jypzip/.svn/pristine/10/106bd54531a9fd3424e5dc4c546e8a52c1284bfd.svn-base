html,body{width:100%;height:100%;}
#windowloading{width: 100%;height: 100%;position: fixed;top: 0;left: 0;background:url(../img/page_bg.jpg);z-index: 1000;}
#wld{width: 156px;height: 128px;background-size: 100% 100%;position: absolute;top: 0;left: 0;right: 0;bottom: 0;margin: auto;}
#body{width: 100%;min-width: 1215px;position: relative;overflow: hidden;height:100%;}
#slider{width:300px;height:100%;position:fixed;top:0;left:-260px;background:rgb(239,239,239);cursor: pointer;}
#slider #Cases h3{position:absolute;top:160px;left:80px;font-size:18px;color:black;font-weight:700;}
#slider #Cases #CasesMenue{position:absolute;top:200px;left:100px;}
#slider #Cases #CasesMenue li,#slider #Contact #ContactMenue li{color:rgb(180,180,180);list-style:none;margin-bottom:20px;width:240px;height:15px;font-size:15px;font-weight:400;}
#slider #Contact #ContactMenue{position:absolute;top:350px;left:100px;}
#slider #Cases #CasesMenue .active{color:black;width:200px;text-align:center;}
#slider #Contact #ContactMenue .active{text-align:center;width:200px;}
#slider #Contact #ContactMenue .active a{color:black;text-decoration:none;}
a:hover{text-decoration: none;color:black;}
a:visited{color:rgb(180,180,180);}
a:active{color:black;}
/*a:link{color:black;}*/
#About-wrap{cursor: pointer;}
h1{color: rgb(180,180,180);font-weight:500;margin:40px 40px;}
#About-wrap #content #contentMenue{width:100%;height:40px;}
#About-wrap #content #contentMenue li{float:left;width:120px;height:18px;list-style:none;display:inline-block;color:rgb(180,180,180);font-size:13px;vertical-align:top;margin-right:20px;line-height:13px;}
#About-wrap #content #contentMenue #ConentAbout:hover{color:red;}
#About-wrap #content #contentMenue #People:hover{color:red;}
#body #slider .clearfix{animation:bian 1s linear forwards;}
#body #slider .active{animation:init 1s linear forwards;}
@keyframes bian{
	0%{background:rgb(180,180,180)}
	100%{background:rgb(239,239,239);}
}
@keyframes init{
	0%{background:rgb(239,239,239);}
	100%{background:rgb(180,180,180);}
}